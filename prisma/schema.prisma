// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator jsonSchema{
  provider = "prisma-json-schema-generator"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paciente {
  cedula          Int      @id
  nombre          String
  apellido        String
  fechaNacimiento DateTime
  telefono        String
  Cita            Cita[]
}

model Medico {
  tarjetaProfesional         Int           @id
  nombre                     String
  apellido                   String
  consultorio                String
  correo                     String
  idEspecialidad             Int
  Cita                       Cita[]
  Especialidad               Especialidad? @relation(fields: [especialidadIdEspecialidad], references: [idEspecialidad])
  especialidadIdEspecialidad Int?
}

model Cita {
  idCita                   Int       @id
  fecha                    DateTime
  cedulaPaciente           Int
  tarjetaProfesional       Int
  Paciente                 Paciente? @relation(fields: [pacienteCedula], references: [cedula])
  pacienteCedula           Int?
  Medico                   Medico?   @relation(fields: [medicoTarjetaProfesional], references: [tarjetaProfesional])
  medicoTarjetaProfesional Int?
}

model Especialidad {
  idEspecialidad Int      @id
  nombre         String
  Medico         Medico[]
}
